public class MostrasNumeros {
    public static void main(String[] args) {
        int numeroInicial, numeroFinal;

        numeroInicial = 0;
        numeroFinal = 20;

        int i = numeroInicial;

        while (i <= numeroFinal) {
            System.out.print("O número " + i);
            boolean numeroPar = i % 2 == 0;
            if(numeroPar){
                System.out.println(" é par!!! \n");
            }else{
                System.out.println(" é ímpar!!! \n");
            }
            i += 1;
        }
    }
}
