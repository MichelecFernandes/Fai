alunos = open("alunos.txt", "w")
boasVindas = ("Olá, Seja Bem vindo")
usandoArquivos = ("\n" + "Esse é um teste usando arquivos!")
aula = ("\n" + "A aula é referente ao dia 07/03/2023")
entender = ("\n" + "Você está começando a entender!")
conseguir = ("\n" +"Você vai conseguir!!!! :)")
alunos.write(boasVindas + usandoArquivos + aula + entender + conseguir)
alunos.close()


alunos = open("alunos.txt", "r")
string = alunos.read()

print(string)
